@model QuanLyBanHang.Models.KhachHang
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h2>Chỉnh sửa khách hàng</h2>

<form action="" method="post">
    <div class="form-group">
        <input type="hidden" class="form-control" value="@Model.MaKH" id="MaKH" name="MaKH" />
    </div>
    <div class="form-group">
        <label>Tên khách hàng:</label>
        <input type="text" class="form-control" value="@Model.TenKH" id="TenKH" name="TenKH" />
    </div>
    <div class="form-group">
        <label>Địa chỉ:</label>
        <input type="text" class="form-control" value="@Model.DiaChi" id="DiaChi" name="DiaChi" />
    </div>
    <div class="form-group">
        <label>Số điện thoại:</label>
        <input type="text" class="form-control" value="@Model.DienThoai" id="DienThoai" name="DienThoai" />
    </div>
    <div class="form-group">
        <label>Giới tính:</label>
        <input type="text" class="form-control" value="@Model.GioiTinh" id="GioiTinh" name="GioiTinh" />
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input type="text" class="form-control" value="@Model.Email" id="Email" name="Email" disabled />
    </div>
    <div class="form-group">
        <label>Mật khẩu:</label>
        <input type="text" class="form-control" value="@Model.Password" id="Password" name="Password" />
    </div>
    <button class="btn btn-primary" type="submit">Lưu thông tin</button>
</form>


<div>
    @Html.ActionLink("Trở về danh sách khách hàng", "Index")
</div>




