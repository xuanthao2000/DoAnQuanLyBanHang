@model IEnumerable<QuanLyBanHang.Models.LoaiSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý loại sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm loại sản phẩm", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên loại sản phẩm
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoaiSP)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaLoaiSP }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaLoaiSP }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaLoaiSP })
        </td>
    </tr>
}

</table>
