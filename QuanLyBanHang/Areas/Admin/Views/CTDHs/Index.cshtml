@model IEnumerable<QuanLyBanHang.Models.CTDH>
@using QuanLyBanHang.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết đơn hàng</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            Mã đơn hàng
        </th>

        <th>
            Tên sản phẩm
        </th>
        <th>
            Hình sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Thành tiền
        </th>
        <th>
            Địa chỉ giao hàng
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaDH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SanPham.TenSP)
    </td>
    <td>
        @Html.Image("../../../../" + @item.SanPham.HinhSP, @item.SanPham.HinhSP, "80")
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Soluong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ThanhTien)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DonHang.DiaChiGiaoHang)
    </td>

    <td>
        @Html.ActionLink("Xem chi tiết", "Details", new { id = item.MaDH })
    </td>
</tr>
}

</table>
