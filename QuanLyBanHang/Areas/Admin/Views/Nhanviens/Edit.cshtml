
@model QuanLyBanHang.Models.Nhanvien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h2>Chỉnh sửa nhân viên</h2>

<form action="" method="post">
    <div class="form-group">
        <input type="hidden" class="form-control" value="@Model.MaNV" id="MaNV" name="MaNV" />
    </div>
    <div class="form-group">
        <label>Họ nhân viên:</label>
        <input type="text" class="form-control" value="@Model.HoNV" id="HoNV" name="HoNV" />
    </div>
    <div class="form-group">
        <label>Tên nhân viên:</label>
        <input type="text" class="form-control" value="@Model.Ten" id="Ten" name="Ten" />
    </div>
    <div class="form-group">
        <label>Địa chỉ:</label>
        <input type="text" class="form-control" value="@Model.Diachi" id="Diachi" name="Diachi" />
    </div>
    <div class="form-group">
        <label>Số điện thoại:</label>
        <input type="text" class="form-control" value="@Model.Dienthoai" id="Dienthoai" name="Dienthoai" />
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input type="text" class="form-control" value="@Model.Email" id="Email" name="Email" disabled />
    </div>
    <div class="form-group">
        <label>Mật khẩu:</label>
        <input type="text" class="form-control" value="@Model.Password" id="Password" name="Password" />
    </div>
    <button class="btn btn-primary" type="submit">Lưu thông tin</button>
</form>


<div>
    @Html.ActionLink("Trở về danh sách nhân viên", "Index")
</div>






