@model QuanLyBanHang.Models.KhachHang
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>

<head>
    <title>Thông tin cá nhân</title>

    <meta charset="UTF-8">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="~/Content/css/style-1.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/all.css">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;600&display=swap" rel="stylesheet">
    <script async defer crossorigin="anonymous"
            src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v7.0"></script>
</head>

<body>

    <div class="container-fluid banner">
        <div class="container">

            <div class="row">
                <div class="col-3 text-center bg-light">
                    <div class="text-danger ">
                        TÀI KHOẢN
                    </div>
                    @if (Session["GioiTinh"] != null)
                    {
                        <img src="~/Content/img/avtnam.png" alt="" style="width: 100px;margin-top:20px;">
                    }
                    else
                    {
                        <img src="~/Content/img/avtnu.png" alt="" style="width: 100px;margin-top:20px;">
                    }

                    <div id="thanh2" class="mt-2">
                    </div>

                    <a class="btn" href="~/Login/Logout" onclick="logOut()" style="background-color:#007bff;color:#fff">Đăng xuất <i class="fas fa-sign-out-alt"></i></a>

                </div>
                <div class="clearfix"></div>

                <div class="col-9">
                    <div>THÔNG TIN TÀI KHOẢN</div>
                    <div class="mt-5">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                <hr />
                                <div class="form-group">
                                    <p>Tên đăng nhập:</p>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Email, @*new { htmlAttributes = new { @disabled = "disabled" }*@new { htmlAttributes = new { @class = "form-control" } })<br />
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.MaKH)

                                <div class="form-group">
                                   <p> Họ tên khách hàng:</p>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    Giới tính
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    Địa chỉ:
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    Số điện thoại:
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-12 form-group">
                                    <label for="">Mật khẩu cũ</label>
                                    <input class="form-control mt-1" type="password" name="oldPw">

                                </div>
                                <div class="form-group">
                                    Mật khẩu mới
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                
                                <div class="col-12 form-group">
                                    <label for="">Xác nhận mật khẩu mới</label>
                                    <input class="form-control mt-1" type="password" name="confirmPw">
                                    
                                </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-default" />
                                    </div>
                                </div>
                            
                        }
                        @*<div class="form-row">
                                <div class="col-6 form-group">
                                    <label class="" for="">Tên đăng nhập</label>
                                    <input class="form-control mt-1" type="text" id="username" placeholder="@Session["Email"]" disabled>
                                    <small id="emailHelp" class="form-text text-muted">Bạn không thể thay đổi tên đăng nhập!!!</small>
                                </div>

                                @Html.HiddenFor(model => model.MaKH)

                                <div class="col-6 form-group">
                                    <label class="" for="">Họ Tên</label>
                                    <input class="form-control mt-1" type="text" id="hoten">
                                </div>
                                <div class="col-6 form-group">
                                    <label for="">Số điện thoại</label>
                                    <input class="form-control mt-1" type="text" id="sdt" placeholder="Số Điện Thoại">

                                </div>
                                <div class="col-6 form-group">
                                    <label for="">Giới tính</label>
                                    <input class="form-control mt-1" type="text" id="gioitinh" placeholder="Giới tính">

                                </div>
                                <div class="col-12 form-group">
                                    <label for="">Địa chỉ</label>
                                    <input class="form-control mt-1" type="text" id="diachi" placeholder="Địa chỉ">

                                </div>
                                <div class="col-12 form-group">
                                    <label for="">Mật khẩu cũ</label>
                                    <input class="form-control mt-1" type="password" id="mkcu">

                                </div>
                                <div class="col-12 form-group">
                                    <label for="">Mật khẩu mới</label>
                                    <input class="form-control mt-1" type="password" id="mkmoi">

                                </div>
                                <div class="col-12 form-group">
                                    <label for="">Xác nhận mật khẩu mới</label>
                                    <input class="form-control mt-1" type="password" id="xacnhanmkmoi">

                                </div>
                                <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Lưu thông tin " class="btn btn-default" />
                                </div>
                            </div>

                                <div class="" id="update">

                                </div>
                            </div>*@
                    </div>

                </div>
                <div class="clearfix"></div>
            </div>

        </div>
    </div>

</body>

</html>



