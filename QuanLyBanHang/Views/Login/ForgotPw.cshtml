
@{
    ViewBag.Title = "ForgotPw";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
</head>
<body>
    @using (Html.BeginForm("sendEmail", "Login", FormMethod.Post))
    {
        <div class="col-md-9 m-auto">
            <div class="card" style="margin-top:150px;margin-bottom:100px;line-height:2;">
                <div class="card-header bg-info"> QUÊN MẬT KHẨU</div>
                <div class="card-body">
                    <form class="form-horizontal" method="POST" action="...">
                        <p>
                            <label class="control-label">Email là tên đăng nhập của bạn, sau khi Reset password thì hệ thống sẽ gửi mật khẩu mới tới Email của bạn. Sau đó vui lòng đổi mật khẩu</label>
                            <br /><label class="control-label">Email(Tên tài khoản) của ban:</label>
                            <input class="form-control" name="email">
                        </p>
                        @*<br /><p><a class="mt-3 d-block btn" href="@Url.Action("sendEmail", "Login")">Reset Password</a></p>*@
                        <button type="submit" class="btn btn-primary">Gửi mật khẩu qua Email</button>
                        <a class="mt-3 d-block btn" href="@Url.Action("Index", "Login")">Trở về trang đăng nhập</a>
                    </form>
                </div>
            </div>
        </div>
    }
    </body>
</html>
